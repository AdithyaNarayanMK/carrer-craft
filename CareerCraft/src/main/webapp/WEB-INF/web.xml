<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>CareerCraft</display-name>
  <filter>
	<filter-name>checkIsAuthenticated</filter-name>
	<filter-class>com.CareerCraft.IsLoggedInFilter</filter-class>
  </filter>
  <filter-mapping>
  	<filter-name>checkIsAuthenticated</filter-name>
  	<url-pattern>/Job/*</url-pattern>
  </filter-mapping>
   <servlet>
  	<servlet-name>jobSearch</servlet-name>
  	<servlet-class>com.CareerCraft.JobSearch</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>jobSearch</servlet-name>
  	<url-pattern>/Job/*</url-pattern>
  </servlet-mapping>
   <servlet>
  	<servlet-name>authentication</servlet-name>
  	<servlet-class>com.CareerCraft.Auth</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>authentication</servlet-name>
  	<url-pattern>/authentication</url-pattern>
  </servlet-mapping>
  <servlet>
  	<servlet-name>sample</servlet-name>
  	<servlet-class>com.CareerCraft.CareerCraft</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>sample</servlet-name>
  	<url-pattern>/</url-pattern>
  </servlet-mapping>
</web-app>